<table><div class="row">
  <div class="col">
    <h1>Phones</h1>
  </div>
   
<div class="col">
    <div class="float-right">
      <%= link_to 'New Phone', new_person_phone_path(@person), class: "btn btn-primary" %>
    </div>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Phone number</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @person.phones.each do |phone| %>
      <%= render 'phones/phone', phone: phone %>
    <% end %>
  </tbody>
</table>
