<h1>Phones</h1>

<table>
  <thead>
    <tr>
      <th>Phone number</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @person.phones.each do |phone| %>
      <%= render 'phones/phone', phone: phone %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Phone', new_person_phone_path(@person) %>
