<% if notice %>
  <div class="row">
    <div class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= notice %>
    </div>
  </div>
<% end %>

<div class="row">
  <h1 class="text-center" class="cut-text">People</h1>
</div>

<div class="row">
  <table class="table">
    <thead>
      <tr>
        <th>Salutation</th>
        <th>Firstname</th>
        <th>Middlename</th>
        <th>Lastname</th>
        <th>Ssn</th>
        <th>Date of birth</th>
        <th>Comment</th>
        <th colspan="3"></th>
      </tr>
    </thead>

   <tbody>
      <% @people.each do |person| %>
        <%= render 'person', person: person %>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<div class="row">
  <%= link_to 'New Person', new_person_path, class: "btn btn-primary" %>
</div>
