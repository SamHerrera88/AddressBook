<tr>
  <td><%= person.salutation %></td>
  <td><%= person.first_name %></td>
  <td><%= person.middle_name %></td>
  <td><%= person.last_name %></td>
  <td><%= person.ssn %></td>
  <td><%= person.date_of_birth %></td>
  <td><%= person.comment %></td>
  <td><%= link_to 'Show', person, class: "btn btn-primary" %></td>
  <td><%= link_to 'Edit', edit_person_path(person), class: "btn btn-primary" %></td>
  <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
</tr>