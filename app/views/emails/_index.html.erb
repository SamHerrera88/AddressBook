<div class="row">
  <div class="col">
    <h1>Emails</h1>
  </div>

<div class="col">
    <div class="float-right">
      <%= link_to 'New Email', new_person_email_path(@person), class: "btn btn-primary"  %>
    </div>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Email address</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person.emails.each do |email| %>
      <%= render 'emails/email', email: email %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Email', new_person_email_path(@person) %>
