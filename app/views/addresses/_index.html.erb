<div class="row">
  <div class="col">
    <h1>Addresses</h1>
  </div>

  <div class="col">
    <div class="float-right">
      <%= link_to 'New Address', new_person_address_path(@person), class: "btn btn-primary"  %>
    </div>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Street</th>
      <th>Town</th>
      <th>Zipcode</th>
      <th>State</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person.addresses.each do |address| %>
      <%= render 'addresses/address', address: address %>
    <% end %>
  </tbody>
</table>

<br>